@model InventoryCreateModel
@{
	ViewData["Title"] = "Inventory";
}

<div class="container-fluid">
	<div class="row">
		<!-- left column -->
		<div class="col-md-6">
			<!-- general form elements -->
			<div class="card card-primary">
				<div class="card-header">
					<h3 class="card-title">Enter New Inventory</h3>
				</div>
				<!-- /.card-header -->
				<!-- form start -->
				<form role="form" asp-antiforgery="true" asp-area="Inventory" asp-action="Create" asp-controller="Inventory" method="post">
					<div class="card-body">
						<div class="form-group">
							<label asp-for="Name">Inventory Name</label>
							<input type="text" class="form-control" asp-for="Name" placeholder="Enter Inventory Name">
						</div>
						<div class="form-group">
							<label  asp-for="Amount">Inventory Amount</label>
							<input type="text" class="form-control" asp-for="Amount" placeholder="Enter Inventory Amount">
						</div>
						<div class="form-group">
							<label asp-for="EntryDate">Inventory Entry Date</label>
							<input type="date" class="form-control" asp-for="EntryDate" placeholder="Enter Entry Date">
						</div>

						<!-- /.card-body -->

						<div class="card-footer">
							<button type="submit" class="btn btn-primary">Submit</button>
						</div>
				</form>
			</div>
			<!-- /.card -->
			<!-- general form elements -->

		</div>
		<!--/.col (left) -->

	</div>
	<!-- /.row -->

</div><!-- /.container-fluid -->
